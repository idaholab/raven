<?xml version="1.0" ?>
<Simulation>
  <TestInfo>
    <name>doc/workshop/forwardSampling/Inputs/previous.FS6</name>
    <author>wangc</author>
    <created>2018-09-21</created>
    <classesTested>PostProcessors.BasicStatistics</classesTested>
    <description>Workshop test: test Forward Sampling Capabilities</description>
  </TestInfo>
  <RunInfo>
    <WorkingDir>r6</WorkingDir>
    <Sequence>GenerateData,PP</Sequence>
    <batchSize>6</batchSize>
  </RunInfo>

  <Distributions>
    <Normal name="Normal">
      <mean>0</mean>
      <sigma>0.2</sigma>
      <lowerBound>-1</lowerBound>
      <upperBound>1</upperBound>
    </Normal>
    <Uniform name="Uniform">
      <lowerBound>0</lowerBound>
      <upperBound>2000</upperBound>
    </Uniform>
  </Distributions>

  <Samplers>
    <MonteCarlo name="myMC">
      <samplerInit>
        <limit>1000</limit>
      </samplerInit>
      <variable name="X1">
        <distribution>Normal</distribution>
      </variable>
      <variable name="X2">
        <distribution>Uniform</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>

  <DataObjects>
    <PointSet name="DummyIN">
      <Input>X1,X2</Input>
    </PointSet>
    <PointSet name="Out">
      <Input>X1,X2</Input>
      <Output>Y1,Y2</Output>
    </PointSet>
    <PointSet name="Stat_basicStatPP">
      <Output>Stat_vars</Output>
    </PointSet>
  </DataObjects>

  <Models>
    <ExternalModel ModuleToLoad="CrisForwSampl" name="PythonModule" subType="">
      <variables>X1,X2,Y1,Y2</variables>
    </ExternalModel>
    <PostProcessor name="Stat" subType="BasicStatistics">
      <expectedValue prefix="mean">X2,Y1</expectedValue>
      <sensitivity prefix="sen">
        <targets>X1,X2</targets>
        <features>Y1,Y2</features>
      </sensitivity>
      <expectedValue prefix="mean">X1,X2,Y1,Y2</expectedValue>
      <sensitivity prefix="sen">
        <targets>X1,X2,Y1,Y2</targets>
        <features>X1,X2,Y1,Y2</features>
      </sensitivity>
    </PostProcessor>
  </Models>

  <Files>
    </Files>
  <OutStreams>
    <Print name="fileOut">
      <type>csv</type>
      <source>Out</source>
    </Print>
    <Plot name="myPlot">
      <plotSettings>
        <plot>
          <type>scatter</type>
          <x>Out|Input|X1</x>
          <y>Out|Input|X2</y>
          <z>Out|Output|Y1</z>
          <colorMap>Out|Output|Y2</colorMap>
        </plot>
        <xlabel>X1</xlabel>
        <ylabel>X2</ylabel>
        <zlabel>Y2</zlabel>
      </plotSettings>
      <actions>
        <how>png</how>
      </actions>
    </Plot>
    <Print name="Stat_basicStatPP_dump">
      <type>csv</type>
      <source>Stat_basicStatPP</source>
    </Print>
  </OutStreams>

  <Steps>
    <MultiRun name="GenerateData">
      <Sampler class="Samplers" type="MonteCarlo">myMC</Sampler>
      <Input class="DataObjects" type="PointSet">DummyIN</Input>
      <Model class="Models" type="ExternalModel">PythonModule</Model>
      <Output class="DataObjects" type="PointSet">Out</Output>
    </MultiRun>
    <PostProcess name="PP">
      <Input class="DataObjects" type="PointSet">Out</Input>
      <Model class="Models" type="PostProcessor">Stat</Model>
      <Output class="DataObjects" type="PointSet">Stat_basicStatPP</Output>
      <Output class="OutStreams" type="Print">Stat_basicStatPP_dump</Output>
    </PostProcess>
  </Steps>

  <VariableGroups>
    <Group name="Stat_vars">mean_X2,
                 mean_Y1,
                 mean_X1,
                 mean_Y2,
                 sen_X1_X1,
                 sen_X1_X2,
                 sen_X1_Y1,
                 sen_X1_Y2,
                 sen_X2_X1,
                 sen_X2_X2,
                 sen_X2_Y1,
                 sen_X2_Y2,
                 sen_Y1_X1,
                 sen_Y1_X2,
                 sen_Y1_Y1,
                 sen_Y1_Y2,
                 sen_Y2_X1,
                 sen_Y2_X2,
                 sen_Y2_Y1,
                 sen_Y2_Y2</Group>
  </VariableGroups>

</Simulation>
