<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>doc/workshop/reducedOrderModeling/inputs/examples.eval</name>
    <author>wangc</author>
    <created>2018-09-21</created>
    <classesTested>Models.ROM</classesTested>
    <description>Workshop test: use rom for prediction</description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>r7</WorkingDir>
    <Sequence>FirstMRun,trainRom,sampleRom, plot</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Distributions>
    <Normal name="angle_d">
      <mean>45</mean>
      <sigma>5</sigma>
      <lowerBound>5</lowerBound>
      <upperBound>85</upperBound>
    </Normal>
  </Distributions>

  <Samplers>
    <MonteCarlo name="mcSampler">
      <samplerInit>
        <limit>20</limit>
        <initialSeed>080118</initialSeed>
      </samplerInit>
      <variable name="angle">
        <distribution>angle_d</distribution>
      </variable>
      <constant name="v0">1.0</constant>
      <constant name="x0">0</constant>
      <constant name="y0">0</constant>
    </MonteCarlo>
    <MonteCarlo name="sampleRom">
      <samplerInit>
        <limit>20</limit>
        <initialSeed>1312</initialSeed>
      </samplerInit>
      <variable name="angle">
        <distribution>angle_d</distribution>
      </variable>
      <constant name="v0">1.0</constant>
      <constant name="x0">0</constant>
      <constant name="y0">0</constant>
    </MonteCarlo>
  </Samplers>

  <DataObjects>
    <PointSet name="inputPlaceHolder">
      <Input>x0,v0,y0,angle</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="outMC">
      <Input>angle</Input>
      <Output>r,t</Output>
    </PointSet>
    <PointSet name="romIn">
      <Input>angle</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="romOut">
      <Input>angle</Input>
      <Output>r</Output>
    </PointSet>
  </DataObjects>

  <Models>
    <ExternalModel ModuleToLoad="../../../../ExternalModels/projectile" name="projectile" subType="">
      <variables>x0,v0,y0,angle,x,y,r,t</variables>
    </ExternalModel>
    <ROM name="IDW" subType="NDinvDistWeight">
      <Features>angle</Features>
      <Target>r</Target>
      <p>3</p>
    </ROM>
  </Models>

  <Steps>
    <MultiRun name="FirstMRun" pauseAtEnd="True">
      <Input class="DataObjects" type="PointSet">inputPlaceHolder</Input>
      <Model class="Models" type="ExternalModel">projectile</Model>
      <Sampler class="Samplers" type="MonteCarlo">mcSampler</Sampler>
      <Output class="DataObjects" type="PointSet">outMC</Output>
    </MultiRun>
    <RomTrainer name="trainRom">
      <Input class="DataObjects" type="PointSet">outMC</Input>
      <Output class="Models" type="ROM">IDW</Output>
    </RomTrainer>
    <MultiRun name="sampleRom">
      <Input class="DataObjects" type="PointSet">romIn</Input>
      <Model class="Models" type="ROM">IDW</Model>
      <Sampler class="Samplers" type="MonteCarlo">sampleRom</Sampler>
      <Output class="DataObjects" type="PointSet">romOut</Output>
    </MultiRun>
    <IOStep name="plot">
      <Input class="DataObjects" type="PointSet">outMC</Input>
      <Input class="DataObjects" type="PointSet">romOut</Input>
      <Output class="OutStreams" type="Plot">plotMC</Output>
    </IOStep>
  </Steps>

  <OutStreams>
    <Plot name="plotMC">
      <plotSettings>
        <plot>
          <type>line</type>
          <x>outMC|Input|angle</x>
          <y>outMC|Output|r</y>
          <c>blue</c>
        </plot>
        <plot>
          <type>scatter</type>
          <marker>+</marker>
          <x>romOut|Input|angle</x>
          <y>romOut|Output|r</y>
          <c>red</c>
        </plot>
        <xlabel>angle</xlabel>
        <ylabel>r</ylabel>
      </plotSettings>
      <actions>
        <how>png</how>
      </actions>
    </Plot>
  </OutStreams>

</Simulation>
