<?xml version="1.0" ?>
<Simulation verbosity="silent">
    <RunInfo>
        <WorkingDir>DirichletProcessGMM</WorkingDir>
        <Sequence>readIn,DirichletProcessGMMBlobs,output</Sequence>
        <batchSize>100</batchSize>
    </RunInfo>
    <Files>
        <Input name="DataSetsFile">./DataSets.csv</Input>
    </Files>
    <Models>
        <PostProcessor name='DirichletProcessGMMBlobs' subType='DataMining' verbosity = 'quiet'>
            <KDD lib='SciKitLearn'>
                <Features>x1,x2</Features>
                <SKLtype>mixture|DPGMM</SKLtype>
                <covariance_type>diag</covariance_type>
		<random_state>0</random_state>
                <n_components>3</n_components>
                <n_iter>10000</n_iter>
                <init_params>wc</init_params>
            </KDD>
            <DataObject    class = 'DataObjects' type = 'PointSet'>DataSets</DataObject>
        </PostProcessor>
        
    </Models>
    <Steps>
        <IOStep name='readIn' pauseAtEnd = 'True'>
            <Input    class = 'Files'             type = ''             >DataSetsFile</Input>
            <Output   class = 'DataObjects'       type = 'PointSet'     >DataSets</Output>
        </IOStep>
        <IOStep name='output' pauseAtEnd = 'True'>
            <Input   class = 'DataObjects'       type = 'PointSet'      >DataSets</Input>
            <Output  class = 'OutStreamManager'  type = 'Plot'          >PlotDirichletProcessGMMBlobs</Output>
        </IOStep>
        <PostProcess name='DirichletProcessGMMBlobs' pauseAtEnd = 'True'>
            <Input   class = 'DataObjects'       type = 'PointSet'      >DataSets</Input>
            <Model   class = 'Models'            type = 'PostProcessor' >DirichletProcessGMMBlobs</Model>
            <Output  class = 'OutStreamManager'  type = 'Print'         >dummy</Output>
        </PostProcess>
    </Steps>
    <OutStreamManager>
        <Print name = 'dummy'>
            <type>csv</type>
            <source>DataSets</source>
        </Print>
        <Plot dim="2" name="PlotDirichletProcessGMMBlobs" overwrite="false" >
            <plotSettings>
                <plot>
                    <type>dataMining</type>
                    <SKLtype>cluster</SKLtype>
                    <x>DataSets|input|x1</x>
                    <y>DataSets|input|x2</y>
                    <clusterLabels>DataSets|Output|DirichletProcessGMMBlobsLabels</clusterLabels>
                    <kwargs>
                        <edgecolor>None</edgecolor>
                    </kwargs>
                </plot>
            </plotSettings>
            <actions>
                <how>png</how>
            </actions>
        </Plot>
    </OutStreamManager>
    <DataObjects>
        <PointSet name="DataSets">
            <Input>x1,x2,y1,y2,z1,z2</Input>
            <Output>Output</Output>
        </PointSet>
    </DataObjects>
</Simulation>

