<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/Samplers/NDSamples/MC</name>
    <author>talbpaul</author>
    <created>2018-03-21</created>
    <classesTested>Samplers.MonteCarlo</classesTested>
    <description>
      Tests sampling a vector variable.
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>MC</WorkingDir>
    <Sequence>sample,print</Sequence>
  </RunInfo>

  <Steps>
    <MultiRun name="sample">
      <Input class="DataObjects" type="PointSet">dummyIN</Input>
      <Model class="Models" type="ExternalModel">model</Model>
      <Sampler class="Samplers" type="MonteCarlo">mc</Sampler>
      <Output class="DataObjects" type="DataSet">solns</Output>
    </MultiRun>
    <IOStep name="print">
      <Input class="DataObjects" type="DataSet">solns</Input>
      <Output class="OutStreams" type="Print">solns</Output>
    </IOStep>
  </Steps>

  <Distributions>
    <Uniform name="u1">
      <lowerBound>1</lowerBound>
      <upperBound>2</upperBound>
    </Uniform>
    <Uniform name="u2">
      <lowerBound>2</lowerBound>
      <upperBound>3</upperBound>
    </Uniform>
    <Uniform name="u3">
      <lowerBound>3</lowerBound>
      <upperBound>4</upperBound>
    </Uniform>
  </Distributions>

  <Samplers>
    <MonteCarlo name="mc">
      <samplerInit>
        <limit>3</limit>
        <initialSeed>42</initialSeed>
      </samplerInit>
      <variable name="scalarIn">
        <distribution>u1</distribution>
      </variable>
      <variable name="vectorIn" shape="5" dims="t">
        <distribution>u2</distribution>
      </variable>
      <variable name="ND_in" shape="2,5" dims="y,t">
        <distribution>u3</distribution>
      </variable>
      <constant name="vectorConst1">1,2,3,4,5</constant>
      <constant name="vectorConst2" shape="5">a,b,c,d,e</constant>
      <constant name="t">10,12,14,16,18</constant>
    </MonteCarlo>
  </Samplers>

  <Models>
    <ExternalModel ModuleToLoad="../vectorInputModel" name="model" subType="">
      <inputs>scalarIn,vectorIn,ND_in</inputs>
      <outputs>scalarOut,vectorOut</outputs>
    </ExternalModel>
  </Models>

  <DataObjects>
    <PointSet name="dummyIN"/>
    <DataSet name="solns">
      <Input>scalarIn,vectorIn,ND_in</Input>
      <Output>scalarOut,vectorOut,vectorConst1,vectorConst2</Output>
      <Index var="t">vectorIn,ND_in,vectorConst1,vectorConst2</Index>
      <Index var="y">ND_in,vectorOut</Index>
    </DataSet>
  </DataObjects>

  <OutStreams>
    <Print name="solns">
      <type>csv</type>
      <source>solns</source>
      <what>input,output</what>
    </Print>
  </OutStreams>

</Simulation>
