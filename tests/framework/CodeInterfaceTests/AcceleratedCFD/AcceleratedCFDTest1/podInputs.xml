<basis>
    <velocityBasisName>basis1</velocityBasisName>
    <scalarBasisName>basis1</scalarBasisName>
    <scalarFieldName>s</scalarFieldName>
</basis>

<fullOrderModel>
    <librarySolution>
        <name>flow1</name>
        <fomDirectoryName>pitz</fomDirectoryName>
    </librarySolution>
</fullOrderModel>

<rom>
    <romName>pitz_rom</romName>
    <romType>scalarTransport</romType>
</rom>

<problemSetup>
    <numVelocityModes>$RAVEN-velMods$</numVelocityModes>
    <nu>1e-5</nu>
    <numScalarModes>$RAVEN-scalMods$</numScalarModes>
    <diff>1e-3</diff>
</problemSetup>

<closureModel>
    <nu_closure>1e-5</nu_closure>
</closureModel>

<solver>
    <method>rk4</method>
    <tolerance>1e-9</tolerance>
    <timestep>1e-6</timestep>
    <startTime>0.0</startTime>
    <endTime>0.05</endTime>
    <!-- only used for backward Euler -->
    <maxInnerIterations>10</maxInnerIterations>
</solver>

<output>
    <writeFrequency>10</writeFrequency>
</output>
