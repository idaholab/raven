<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/CodeInterfaceTests.testMCMammothNoExecutable_BisonRelap7</name>
    <author>tompjame</author>
    <created>2016-08-29</created>
    <classesTested>Models.Code.MAMMOTH, Models.AliasSystem</classesTested>
    <description>
       An example of using the MAMMOTH code interface (no executable). It checks Bison and RELAP7. 
       This test is designed to ensure the MAMMOTH interface mechanics is correctly functional.
       In addition it used the RAVEN alias system.
    </description>
    <revisions>
      <revision author="talbpaul" date="2016-09-15">Test updates</revision>
      <revision author="alfoa" date="2016-11-30">Added alias for MAMMOTH just to test the new system</revision>
      <revision author="alfoa" date="2016-12-12">Added type for alias system in mammoth test</revision>
      <revision author="alfoa" date="2017-01-21">Adding this test description.</revision>
    </revisions>
  </TestInfo>
  <RunInfo>
    <WorkingDir>MammothInterface/Bison_Relap7</WorkingDir>
    <Sequence>MCTestMammoth,print</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Files>
    <Input name="mammothInput" type="mammothInput|bisonInput">bison.i</Input>
    <Input name="relap7Input" type="relap7Input">relap.i</Input>
  </Files>

  <Models>
    <Code name="Mammoth" subType="MAMMOTH">
      <executable>
        <!--  /path/to/mammoth/executable -->
        <!-- here we should put the executable. Since we want to test the interface only, it is going to be empty -->
      </executable>
      <alias variable='init_liq_temp' type="input">Relap7@GlobalParams|initial_T_liquid</alias>
    </Code>
  </Models>

  <Distributions>
    <Normal name="G1">
      <mean>293.15</mean>
      <sigma>10</sigma>
      <lowerBound>0.001</lowerBound>
      <upperBound>10000</upperBound>
    </Normal>
    <Normal name="G2">
      <mean>0.345</mean>
      <sigma>0.05</sigma>
      <lowerBound>0.0001</lowerBound>
      <upperBound>10</upperBound>
    </Normal>
  </Distributions>

  <Samplers>
    <MonteCarlo name="MC1">
      <samplerInit>
        <limit>3</limit>
      </samplerInit>
      <variable name="init_liq_temp">
        <distribution>G1</distribution>
      </variable>
      <variable name="Bison@Materials|fuel_mechanical|poissons_ratio">
        <distribution>G2</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>

  <Steps>
    <MultiRun name="MCTestMammoth">
      <Input class="Files" type="">mammothInput</Input>
      <Input class="Files" type="">relap7Input</Input>
      <Model class="Models" type="Code">Mammoth</Model>
      <Sampler class="Samplers" type="MonteCarlo">MC1</Sampler>
      <Output class="DataObjects" type="HistorySet">solns</Output>
    </MultiRun>
    <IOStep name="print">
      <Input class="DataObjects" type="HistorySet">solns</Input>
      <Output class="OutStreams" type="Print">perturb_mammoth</Output>
    </IOStep>
  </Steps>

  <OutStreams>
    <Print name="perturb_mammoth">
      <type>csv</type>
      <source>solns</source>
    </Print>
  </OutStreams>

  <DataObjects>
    <HistorySet name="solns">
      <Input>init_liq_temp,Bison@Materials|fuel_mechanical|poissons_ratio</Input>
      <Output>ave_temp_interior,peak_temp,peak_clad_temp,gas_volume</Output>
    </HistorySet>
  </DataObjects>

</Simulation>
