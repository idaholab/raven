<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/CodeInterfaceTests/Scale.ScaleCombined</name>
    <author>alfoa</author>
    <created>2018-04-04</created>
    <classesTested>Models.Code.Scale</classesTested>
    <description>
       An example of using the the Model Code of type Scale, with Forward Sampling and combined calcolation
       (Triton to Origen)
    </description>
    <revisions>
      <revision author="alfoa" date="2018-04-04">Test created</revision>
    </revisions>
  </TestInfo>
  <RunInfo>
    <WorkingDir>SCALE_triton_origen_combined</WorkingDir>
    <Sequence>sampleScale</Sequence>
    <batchSize>8</batchSize>
    <deleteOutExtension>ps</deleteOutExtension>
  </RunInfo>

  <Files>
    <Input name="decay_origen" type="origen">decay_origen.inp</Input>
    <Input name="htr_triton" type="triton">htr_triton.inp</Input>
  </Files>

  <Models>
    <Code name="MyScale" subType="Scale">
      <executable>/Applications/SCALE-6.2.app/Contents/Resources/bin/scalerte</executable>
      <sequence>triton,origen</sequence>
    </Code>
  </Models>

  <Distributions>
    <Uniform name="bu_dist">
      <upperBound>60.0</upperBound>
      <lowerBound>0.0</lowerBound>
    </Uniform>
    <Uniform name="enrichment_dist">
      <upperBound>20.0</upperBound>
      <lowerBound>3.</lowerBound>
    </Uniform>
  </Distributions>

  <Functions>
    <External file="u235_density_computation.py" name="u235density">
        <variable>enrichment</variable>
    </External>
    <External file="u238_density_computation.py" name="u238density">
        <variable>enrichment</variable>
    </External>
    <External file="burning_time_computation.py" name="computeBurningTime">
        <variable>burnup</variable>
    </External>
  </Functions>

  <Samplers>
    <Grid name="MC">
      
      <variable name="burnup">
        <distribution>bu_dist</distribution>
        <grid construction="equal" steps="10" type="value">1E-4 60</grid>
      </variable>
      <variable name="enrichment">
        <distribution>enrichment_dist</distribution>
        <grid construction="equal" steps="10" type="value">3. 20.</grid>
      </variable>
      <variable name="u235dens">
          <function>u235density</function>
      </variable>
      <variable name="u238dens">
          <function>u238density</function>
      </variable>
      <variable name="burning_time">
          <function>computeBurningTime</function>
      </variable>
    </Grid>
  </Samplers>
 
  <Steps>
    <MultiRun name="sampleScale" >
      <Input class="Files" type="origen">decay_origen</Input>
      <Input class="Files" type="triton">htr_triton</Input>
      <Model class="Models" type="Code">MyScale</Model>
      <Sampler class="Samplers" type="Grid">MC</Sampler>
      <Output class="Databases" type="HDF5">DataB_Scale</Output>
      <Output class="DataObjects" type="HistorySet">time_evolution</Output>
      <Output class="OutStreams" type="Print">output_time_evolution</Output>
      <Output class="OutStreams" type="Plot">plot_decay_heat</Output>
    </MultiRun>
  </Steps>

  <DataObjects>
    <HistorySet name="time_evolution">
      <Input>burnup,enrichment,u235dens,u238dens</Input>
      <Output>subtotals_fission_products_watts,subtotals_actinides_watts,totals_watts,bu</Output>
    </HistorySet>
  </DataObjects>

  <OutStreams>
    <Print name="output_time_evolution">
      <type>csv</type>
      <source>time_evolution</source>
    </Print>
    <Plot name="plot_decay_heat" overwrite="False">
      <plotSettings>
        <plot>
          <type>scatter</type>
          <x>time_evolution|Output|time</x>
          <y>time_evolution|Output|totals_watts</y>
        </plot>
        <xlabel>Time (s)</xlabel>
        <ylabel>DH (W)</ylabel>
      </plotSettings>
      <actions>
        <how>png</how>
        <title>
          <text> </text>
        </title>
      </actions>
    </Plot>
  </OutStreams>

  <Databases>
    <HDF5 name="DataB_Scale" readMode="overwrite"/>
  </Databases>

</Simulation>
