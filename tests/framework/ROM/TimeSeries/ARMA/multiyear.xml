<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/ROM/TimeSeries/ARMA.Multiyear</name>
    <author>talbpaul</author>
    <created>2019-05-14</created>
    <classesTested>SupervisedLearning.ARMA</classesTested>
    <description>
       Tests sampling the ARMA with multiple years in each sample.
       As a check, assure that for each realization, the ratio between the mean of years 1 and 0
       should be near 1.5, and the ratio between years 2 and 0 should be 2.25.
       Further, check that when ensembled the pass-through value is usable (mostly a check for ND data).
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>Multiyear</WorkingDir>
    <Sequence>read, train, print, pickle, sample, dump</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Steps>
    <IOStep name="read">
      <Input class="Files" type="">rawDataFile</Input>
      <Output class="DataObjects" type="HistorySet">rawData</Output>
    </IOStep>
    <RomTrainer name="train">
      <Input class="DataObjects" type="HistorySet">rawData</Input>
      <Output class="Models" type="ROM">arma</Output>
    </RomTrainer>
    <IOStep name="print">
      <Input class="Models" type="ROM">arma</Input>
      <Output class="DataObjects" type="DataSet">romMeta</Output>
      <Output class="OutStreams" type="Print">romMeta</Output>
    </IOStep>
    <IOStep name='pickle'>
      <Input class="Models" type="ROM">arma</Input>
      <Output class="Files" type="">pk</Output>
    </IOStep>
    <MultiRun name="sample">
      <Input class="DataObjects" type="PointSet">dataIn</Input>
      <Model class="Models" type="ROM">ens</Model>
      <Sampler class="Samplers" type="MonteCarlo">mcSampler</Sampler>
      <Output class="DataObjects" type="DataSet">final_out</Output>
    </MultiRun>
    <IOStep name='dump'>
      <Input class="DataObjects" type="DataSet">final_out</Input>
      <Output class="OutStreams" type="Print">final_out</Output>
    </IOStep>
  </Steps>

  <Files>
    <Input name="rawDataFile">dataSet.csv</Input>
    <Input name="pk">arma.pk</Input>
  </Files>

  <Samplers>
    <MonteCarlo name="mcSampler">
      <samplerInit>
        <limit>3</limit>
        <initialSeed>42</initialSeed>
      </samplerInit>
      <constant name="scaling">1.0</constant>
    </MonteCarlo>
  </Samplers>

  <Models>
    <ROM name="arma" subType="ARMA">
      <Target>Speed,Time</Target>
      <Features>scaling</Features>
      <pivotParameter>Time</pivotParameter>
      <outTruncation domain="positive">Speed</outTruncation>
      <Fourier>168, 84, 24, 12</Fourier>
      <seed>42</seed>
      <P>0</P>
      <Q>1</Q>
      <reseedCopies>False</reseedCopies>
      <!--Multiyear>
        <years>3</years>
        <growth targets="Speed" mode="exponential">10</growth>
      </Multiyear-->
      <Segment>
        <subspace pivotLength="120" shift="first">Time</subspace>
      </Segment>
      <preserveInputCDF>True</preserveInputCDF>
      <!--Peaks target='Speed' threshold='2' period='24'>
        <window width='4' >-2,3</window>
        <window width='5' >18,21</window>
        <nbin>5</nbin>

      </Peaks-->
    </ROM>
    <ExternalModel name='after_arma' subType='' ModuleToLoad='after_arma'>
      <variables>Speed, Time, Year, yearly_aggregate</variables>
    </ExternalModel>
    <EnsembleModel name='ens' subType=''>
      <Model class='Models' type='ROM'>arma
        <Input class='DataObjects' type='PointSet'>dataIn</Input>
        <TargetEvaluation class='DataObjects' type='DataSet'>synData</TargetEvaluation>
      </Model>
      <Model class='Models' type='ExternalModel'>after_arma
        <Input class='DataObjects' type='PointSet'>afterIn</Input>
        <TargetEvaluation class='DataObjects' type='DataSet'>after_rom_data</TargetEvaluation>
      </Model>
    </EnsembleModel>
  </Models>

  <OutStreams>
    <Print name="romMeta">
      <type>csv</type>
      <source>romMeta</source>
    </Print>
    <Print name="final_out">
      <type>csv</type>
      <source>final_out</source>
    </Print>
  </OutStreams>

  <DataObjects>
    <PointSet name="dataIn">
      <Input>scaling</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="afterIn">
      <Input>Speed</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <HistorySet name="rawData">
      <Input>scaling</Input>
      <Output>Speed,Time</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
    <DataSet name="synData">
      <Input>scaling</Input>
      <Output>Speed</Output>
      <Index var="Time">Speed</Index>
      <!--Index var="Year">Speed</Index-->
    </DataSet>
    <DataSet name="after_rom_data">
      <Input>Speed</Input>
      <Output>yearly_aggregate</Output>
      <Index var="Time">Speed</Index>
      <!--Index var="Year">Speed, yearly_aggregate</Index-->
    </DataSet>
    <HistorySet name="final_out">
      <Input>scaling</Input>
      <Output>yearly_aggregate</Output>
      <options>
        <pivotParameter>Year</pivotParameter>
      </options>
    </HistorySet>
    <DataSet name="romMeta"/>
  </DataObjects>

</Simulation>
