<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/ROM/TimeSeries/ARMA.Segmented</name>
    <author>talbpaul</author>
    <created>2018-11-20</created>
    <classesTested>SupervisedLearning.ARMA</classesTested>
    <description>
      Tests the mechanics of clusterering the "time" subspace of the ARMA ROM.
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>Clustered</WorkingDir>
    <Sequence>
      load, train, stats, sample, valdur_orig, valdur_samples,
      load_gold, vdc_metric, print
    </Sequence>
  </RunInfo>

  <Steps>
    <IOStep name="load">
      <Input class="Files" type="">input</Input>
      <Output class="DataObjects" type="HistorySet">input</Output>
    </IOStep>
    <RomTrainer name="train">
      <Input class="DataObjects" type="HistorySet">input</Input>
      <Output class="Models" type="ROM">arma</Output>
    </RomTrainer>
    <IOStep name="stats">
      <Input class="Models" type="ROM">arma</Input>
      <Output class="DataObjects" type="DataSet">romMeta</Output>
      <Output class="OutStreams" type="Print">romMeta</Output>
    </IOStep>
    <MultiRun name="sample">
      <Input class="DataObjects" type="PointSet">placeholder</Input>
      <Model class="Models" type="ROM">arma</Model>
      <Sampler class="Samplers" type="MonteCarlo">mc</Sampler>
      <Output class="DataObjects" type="HistorySet">synthetic</Output>
    </MultiRun>
    <PostProcess name="valdur_orig">
      <Input class="DataObjects" type="HistorySet">input</Input>
      <Model class="Models" type="PostProcessor">val_dur</Model>
      <Output class="DataObjects" type="HistorySet">input_durs</Output>
    </PostProcess>
    <PostProcess name="valdur_samples">
      <Input class="DataObjects" type="HistorySet">synthetic</Input>
      <Model class="Models" type="PostProcessor">val_dur</Model>
      <Output class="DataObjects" type="HistorySet">sample_durs</Output>
    </PostProcess>
    <IOStep name="load_gold">
      <Input class="Files" type="">gold_dur</Input>
      <Output class="DataObjects" type="HistorySet">gold_durs</Output>
    </IOStep>
    <PostProcess name="vdc_metric">
      <Input class="DataObjects" type="HistorySet">gold_durs</Input>
      <Input class="DataObjects" type="HistorySet">sample_durs</Input>
      <Model class="Models" type="PostProcessor">metric</Model>
      <Output class="DataObjects" type="PointSet">metric</Output>
    </PostProcess>
    <IOStep name="print">
      <Input class="DataObjects" type="HistorySet">input_durs</Input>
      <Input class="DataObjects" type="PointSet">metric</Input>
      <Output class="OutStreams" type="Print">input_durs</Output>
      <Output class="OutStreams" type="Print">metric</Output>
    </IOStep>
  </Steps>

  <Files>
    <Input name="input">head.csv</Input>
    <Input name="gold_dur">gold_durs.csv</Input>
  </Files>

  <DataObjects>
    <PointSet name="placeholder">
      <Input>scaling</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <HistorySet name="input">
      <Input>scaling</Input>
      <Output>Signal, Time</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="synthetic">
      <Input>scaling</Input>
      <Output>Signal, Time</Output>
      <options>
        <pivotParameter>Time</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="input_durs">
      <Output>counts_Signal</Output>
      <options>
        <pivotParameter>bins_Signal</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="sample_durs">
      <Output>counts_Signal</Output>
      <options>
        <pivotParameter>bins_Signal</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="gold_durs">
      <Output>counts_Gold</Output>
      <options>
        <pivotParameter>bins_Signal</pivotParameter>
      </options>
    </HistorySet>
    <PointSet name="metric">
      <Output>metric_counts_Gold_counts_Signal</Output>
    </PointSet>
    <DataSet name="romMeta"/>
  </DataObjects>

  <Models>
    <ROM name="arma" subType="ARMA">
      <Target>Signal, Time</Target>
      <Features>scaling</Features>
      <pivotParameter>Time</pivotParameter>
      <P>0</P>
      <Q>0</Q>
      <Fourier>100, 5, 3</Fourier>
      <preserveInputCDF>True</preserveInputCDF>
      <Segment grouping='cluster'>
        <Classifier class='Models' type='PostProcessor'>classifier</Classifier>
        <subspace divisions='10' shift='first'>Time</subspace>
      </Segment>
    </ROM>
    <PostProcessor name="classifier" subType="DataMining">
      <KDD labelFeature="labels" lib="SciKitLearn">
        <Features>Signal</Features>
        <SKLtype>cluster|AffinityPropogation</SKLtype>
      </KDD>
    </PostProcessor>
    <PostProcessor name="val_dur" subType="ValueDuration">
      <target>Signal</target>
      <bins>10</bins>
    </PostProcessor>
    <PostProcessor name="metric" subType="Metric">
      <Features type="variable">counts_Signal</Features>
      <Targets type="variable">counts_Gold</Targets>
      <pivotParameter>bins_Signal</pivotParameter>
      <Metric class="Metrics" type="SKL">metric</Metric>
    </PostProcessor>
  </Models>

  <Metrics>
    <SKL name="metric">
      <metricType>regression|mean_squared_error</metricType>
    </SKL>
  </Metrics>

  <Samplers>
    <MonteCarlo name="mc">
      <samplerInit>
        <limit>10</limit>
        <initialSeed>42</initialSeed>
      </samplerInit>
      <constant name='scaling'>1.0</constant>
    </MonteCarlo>
  </Samplers>

  <OutStreams>
    <Print name="input_durs">
      <type>csv</type>
      <source>input_durs</source>
    </Print>
    <Print name="metric">
      <type>csv</type>
      <source>metric</source>
    </Print>
    <Print name="romMeta">
      <type>csv</type>
      <source>romMeta</source>
    </Print>
  </OutStreams>
</Simulation>
