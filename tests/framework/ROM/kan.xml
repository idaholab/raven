<?xml version="1.0" ?>
<Simulation>
  <TestInfo>
    <name>framework/ROM/kan</name>
    <author>@cogljj</author>
    <created>2025-05-13</created>
    <revisions>
    </revisions>
    <classesTested>KAN</classesTested>
    <description>
      Test the Kolmogorov-Arnold Networks using a sum of a cosine and a cube
      root.
      The data was generated in the spreadsheet KAN/kan_data.ods
      Note that more training data would be better.
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>KAN</WorkingDir>
    <Sequence>load, train_kan, load2, test_kan</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Files>
    <Input name="kan_data">kan_data.csv</Input>
    <!-- <Input name="sine_data_prev">sine_data_prev.csv</Input> -->
  </Files>

  <Models>
    <ROM name="kanrom" subType="KAN">
      <Features>x1, x2</Features>
      <Target>fx</Target>
      <layers>5,2</layers>
      <steps>50,prune</steps>
      <seed>42</seed>
      <!-- 
      <loss>mean_squared_error</loss>
      <epochs>5</epochs>
      <random_seed>1986</random_seed>
      <LSTM name="lstm1">
        <dim_out>32</dim_out>
      </LSTM>
      <LSTM name="lstm2">
        <dim_out>16</dim_out>
      </LSTM>
      <Dense name="dense">
      </Dense>
      <layer_layout>lstm1, lstm2, dense</layer_layout>
      -->
    </ROM>
  </Models>

  <Samplers>
    <CustomSampler name="hs_sample">
      <Source class="DataObjects" type="PointSet">prev_samples</Source>
      <variable name="x1" />
      <variable name="x2" />
    </CustomSampler>
  </Samplers>

  <Steps>
    <IOStep name="load">
      <Input class="Files" type="">kan_data</Input>
      <Output class="DataObjects" type="PointSet">samples</Output>
    </IOStep>
    <IOStep name="load2">
      <Input class="Files" type="">kan_data</Input>
      <Output class="DataObjects" type="PointSet">prev_samples</Output>
    </IOStep> -->
    <RomTrainer name="train_kan">
      <Input class="DataObjects" type="PointSet">samples</Input>
      <Output class="Models" type="ROM">kanrom</Output>
    </RomTrainer>
    <MultiRun name="test_kan">
      <Input class="DataObjects" type="PointSet">prev_samples</Input>
      <Model class="Models" type="ROM">kanrom</Model>
      <Sampler class="Samplers" type="CustomSampler">hs_sample</Sampler>
      <Output class="DataObjects" type="PointSet">resampled</Output>
      <Output class="OutStreams" type="Print">out_resampled</Output>
    </MultiRun>
  </Steps>

  <DataObjects>
    <PointSet name="samples">
      <Input>x1,x2</Input>
      <Output>fx</Output>
    </PointSet>
    <PointSet name="prev_samples">
      <Input>x1,x2</Input>
    </PointSet>
    <PointSet name="resampled">
      <Input>x1, x2</Input>
      <Output>fx</Output>
    </PointSet>
  </DataObjects>

  <OutStreams>
    <Print name="out_resampled">
      <type>csv</type>
      <source>resampled</source>
    </Print>
  </OutStreams>

</Simulation>
