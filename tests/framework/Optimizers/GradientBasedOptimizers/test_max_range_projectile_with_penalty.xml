<?xml version="1.0" ?>
<Simulation verbosity="debug">

  <!-- Test info -->

  <TestInfo>
    <name>framework/Optimizers/GradientBasedOptimizers.SPSAMaximizationPenalty</name>
    <author>alfoa</author>
    <created>2016-11-03</created>
    <classesTested>Optimizers.SPSA</classesTested>
    <description>
       Example of usage of the GradientBased Optimizer of type SPSA within the RAVEN framework in a boundary constrained maximization problem
       with penalty function.
       This example uses a projectile model and it is aimed to maximize the projectile range acting on the intial velocity and shooting angle.
       In this test, the angle is bounded (boundary constrantis) and the velocity is ``constrained'' with a quadratic
       penalty function.
    </description>
  </TestInfo>

  <!-- actual RAVEN input -->

  <RunInfo>
    <WorkingDir>maxRangeWithBoundaryConstraintsWithPenalty</WorkingDir>
    <Sequence>optimize,print,getOptPoint</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Files>
    <Input name="opt_path">opt_export_0.csv</Input>
  </Files>

  <Steps>
    <MultiRun name="optimize">
      <Input class="DataObjects" type="PointSet">dummyIN</Input>
      <Model class="Models" type="ExternalModel">proj</Model>
      <Optimizer class="Optimizers" type="SPSA">opter</Optimizer>
      <SolutionExport class="DataObjects" type="HistorySet">opt_export</SolutionExport>
      <Output class="DataObjects" type="PointSet">optOut</Output>
    </MultiRun>
    <IOStep name="printOptPoint">
      <Input class="DataObjects" type="PointSet">opt_soln</Input>
      <Output class="OutStreams" type="Print">opt_soln</Output>
    </IOStep>
    <IOStep name="print" pauseAtEnd="True">
      <Input class="DataObjects" type="PointSet">optOut</Input>
      <Input class="DataObjects" type="HistorySet">opt_export</Input>
      <Output class="OutStreams" type="Print">opt_dump</Output>
      <Output class="OutStreams" type="Print">opt_export</Output>
      <Output class="OutStreams" type="Plot">trajectory</Output>
      <Output class="OutStreams" type="Plot">convergenceHistory</Output>
    </IOStep>
    <PostProcess name="getOptPoint">
      <Input class="DataObjects" type="HistorySet">opt_export</Input>
      <Model class="Models" type="PostProcessor">snapshot</Model>
      <Output class="DataObjects" type="PointSet">opt_soln</Output>
      <Output class="OutStreams" type="Print">opt_soln</Output>
    </PostProcess>
  </Steps>

  <Optimizers>
    <SPSA name="opter">
      <initialization>
        <limit>2000</limit>
        <type>max</type>
        <initialSeed>42</initialSeed>
      </initialization>
      <TargetEvaluation class="DataObjects" type="PointSet">optOut</TargetEvaluation>
      <convergence>
          <relativeThreshold>1e-2</relativeThreshold>
      </convergence>
      <variable name='v0'>
        <upperBound>1000</upperBound>
        <lowerBound>20</lowerBound>
        <initial>30</initial>
      </variable>
      <variable name='angle'>
        <upperBound>50</upperBound>
        <lowerBound>30</lowerBound>
        <initial>40</initial>
      </variable>
      <objectVar>r</objectVar>
      <parameter>
        <a>0.05</a>
      </parameter>
    </SPSA>
  </Optimizers>

  <Models>
    <ExternalModel ModuleToLoad="projectilePenalty" name="proj" subType="">
      <variables>v0,angle,r</variables>
    </ExternalModel>
    <PostProcessor name="snapshot" subType="InterfacedPostProcessor">
      <method>HistorySetSnapShot</method>
      <type>max</type>
      <pivotVar>varsUpdate</pivotVar>
    </PostProcessor>
  </Models>

  <DataObjects>
    <PointSet name="dummyIN">
      <Input>v0,angle</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="optOut">
      <Input>v0,angle</Input>
      <Output>r</Output>
    </PointSet>
    <PointSet name="opt_soln">
      <Input>trajID</Input>
      <Output>v0,ang,r,varsUpdate</Output>
    </PointSet>
    <HistorySet name="opt_export">
      <Input>trajID</Input>
      <Output>v0,angle,r,varsUpdate</Output>
    </HistorySet>
  </DataObjects>

  <OutStreams>
    <Print name="opt_dump">
      <type>csv</type>
      <source>optOut</source>
    </Print>
    <Print name="opt_soln">
      <type>csv</type>
      <source>opt_soln</source>
    </Print>
    <Print name="opt_export">
      <type>csv</type>
      <source>opt_export</source>
    </Print>
    <Plot  name="trajectory" overwrite="false" verbosity="debug">
        <plotSettings>
            <plot>
                <type>scatter</type>
                <x>optOut|Input|angle</x>
                <y>optOut|Input|v0</y>
                <z>optOut|Output|r</z>
            </plot>
            <xlabel>v0</xlabel>
            <ylabel>angle</ylabel>
            <zlabel>r</zlabel>
        </plotSettings>
        <actions>
            <how>png</how>
            <title>
                <text> </text>
            </title>
        </actions>
    </Plot>
    <Plot  name="convergenceHistory" overwrite="false" verbosity="debug">
        <plotSettings>
            <plot>
                <type>scatter</type>
                <x>opt_export|Output|varsUpdate</x>
                <y>opt_export|Output|r</y>
            </plot>
            <xlabel>iteration</xlabel>
            <ylabel>r</ylabel>
        </plotSettings>
        <actions>
            <how>png</how>
            <title>
                <text> </text>
            </title>
        </actions>
    </Plot>
  </OutStreams>

</Simulation>
