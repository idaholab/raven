        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>5</initial>
      </variable>

      <variable name=" fuelLocation_6">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>6</initial>
      </variable>

      <variable name=" fuelLocation_7">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>7</initial>
      </variable>

      <variable name=" fuelLocation_8">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>8</initial>
      </variable>

      <variable name=" fuelLocation_9">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>9</initial>
      </variable>

      <variable name=" fuelLocation_10">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>10</initial>
      </variable>

      <variable name=" fuelLocation_11">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>11</initial>
      </variable>

      <variable name=" fuelLocation_12">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>12</initial>
      </variable>

      <variable name=" fuelLocation_13">
        <distribution>uniform_dist_woRepl_1</distribution>
        <initial>13</initial>
      </variable> -->

      <objective>ans</objective>
      <TargetEvaluation class="DataObjects" type="PointSet">optOut</TargetEvaluation>
    </GeneticAlgorithm>
  </Optimizers>

    <Models>
      <ExternalModel ModuleToLoad="../../AnalyticModels/optimizing/myLocalSum.py" name="myLocalSum" subType="">
        <variables>x1,x2,x3,x4,x5,x6,ans</variables>
      </ExternalModel>
    </Models>

    <DataObjects>
      <PointSet name="placeholder"/>
      <PointSet name="optOut">
        <Input>x1,x2,x3,x4,x5,x6</Input>
        <Output>ans</Output>
      </PointSet>
      <PointSet name="opt_export">
        <Input>trajID</Input>
        <Output>x1,x2,x3,x4,x5,x6,ans</Output>
        <!-- <Output>x1,x2,x3,x4,x5,x6,ans,iteration,accepted,conv_objective</Output> fitness,conv_fitness -->
      </PointSet>
    </DataObjects>

    <OutStreams>
      <Print name="optOut">
        <type>csv</type>
        <source>optOut</source>
      </Print>
      <Print name="opt_export">
        <type>csv</type>
        <source>opt_export</source>
        <clusterLabel>trajID</clusterLabel>
      </Print>
    </OutStreams>
</Simulation>
