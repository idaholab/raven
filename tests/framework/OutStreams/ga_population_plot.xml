<Simulation verbosity = 'debug'>

  <TestInfo>
    <name>framework/OutStreams.PopulationPlot</name>
    <author>mandd</author>
    <created>2021-11-20</created>
    <classesTested>OutStreams.PopulationPlot</classesTested>
    <description>
      This test is testing the PopulationPlot plotter. Given a pointset (generated by genetic algorithm), it plots the 
      input and output variables for each generation subset by considering the generation min, mean and max values.
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>GApopulation</WorkingDir>
    <Sequence>importData,plot</Sequence>
  </RunInfo>
  
  <Files>
    <Input name="GApointset">opt_export.csv</Input>
  </Files>

  <Steps>
    <IOStep name="importData">
      <Input  class="Files"       type=""         >GApointset</Input>
      <Output class="DataObjects" type="PointSet" >samples</Output>
    </IOStep>
    <IOStep name="plot">
      <Input  class="DataObjects" type="PointSet" >samples</Input>
      <Output class="OutStreams"  type="Plot"     >plotter</Output>
    </IOStep>
  </Steps>

  <DataObjects>
    <PointSet name="samples">
      <Input>a,b,c,d</Input>
      <Output>ans,age,batchId,fitness</Output>
    </PointSet>
  </DataObjects>

  <OutStreams>
    <Plot name="plotter" subType="PopulationPlot"  overwrite="True" dir="OptimizationPlots">
      <source>samples</source>
      <vars>a,b,c,d,ans</vars>
      <logVars>ans</logVars>
      <index>batchId</index>
      <how>png</how>
    </Plot>
  </OutStreams>

</Simulation>
